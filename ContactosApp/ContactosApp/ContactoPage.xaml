<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContactosApp.ContactoPage">
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="tbiGuardar"></ToolbarItem>
  </ContentPage.ToolbarItems>
  <StackLayout>
    <Image x:Name="imgFoto" WidthRequest="150" HeightRequest="150" BackgroundColor="Gray" HorizontalOptions="Center"></Image>
    <Entry x:Name="txtNombre" Placeholder="Nombre"></Entry>
    <Entry x:Name="txtTelefono" Keyboard="Number" Placeholder="Teléfono"></Entry>
    <Entry x:Name="txtDireccion" Placeholder="Dirección"></Entry>
    <StackLayout Orientation="Horizontal">
      <Label Text="Favorito"></Label>
      <Switch x:Name="swFavorito"></Switch>
    </StackLayout>
  </StackLayout>
</ContentPage>